{
  "name": "@danmad/package-template",
  "version": "1.0.0",
  "description": "A handy package template",
  "homepage": "https://github.com/danmad/package-template#readme",
  "bugs": "https://github.com/danmad/package-template/issues",
  "repository": "https://github.com/danmad/package-template.git",
  "license": "MIT",
  "author": "DanMad <hooky.mounted_0n@icloud.com>",
  "scripts": {
    "bootstrap": "yarn install && husky install && chmod +x .husky/*",
    "bootstrap-ci": "yarn install --frozen-lockfile && husky install && chmod +x .husky/*",
    "build": "rm -rf dist/* && webpack",
    "connect": "cd dist && yarn link",
    "disconnect": "cd dist && yarn unlink",
    "nuke": "rm -rf node_modules && rm -f yarn.lock",
    "ship": "cd dist && yarn publish",
    "tidy": "sort-package-json && prettier --write '**/*'"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.1",
    "sort-package-json": "^2.0.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
